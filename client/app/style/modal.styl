.png-modal-backdrop.modal-backdrop.in
  opacity 0.4

.png-modal
  .modal-content
    background-color transparent
    -webkit-box-shadow 0 3px 9px rgba(0, 0, 0, 0)
    box-shadow 0 3px 9px rgba(0, 0, 0, 0)
    border 0px
    .png-modal-content
      overflow hidden
      position relative 
      border-radius 3px
      height 80px
      transition height 0.5s, width 0.5s
      background-color #fff
      margin 0 auto
      -webkit-box-shadow 0 2px 26px rgba(0, 0, 0, .3), 0 0 0 1px rgba(0, 0, 0, .1)
      box-shadow 0 2px 26px rgba(0, 0, 0, .3), 0 0 0 1px rgba(0, 0, 0, .1)
      &::after
        transition display 0.5
        width 100%
        height 100%
        top 0
        text-align center
        left 0
        color rgba(0,0,0,0.4)
        position absolute
        background white
        content "\E234"
        font-family 'Glyphicons Halflings'
        font-style normal
        font-weight 400
        line-height 2
        font-size 40px
        -webkit-font-smoothing antialiased
        animation-name load
        animation-duration 0.6s
        animation-iteration-count: infinite;
      &.load
        width 100%
        height auto
        &::after
          display none
  .modal-md
    width: 600px
    .png-modal-content
      width 250px
  .modal-sm
    width: 300px
    .png-modal-content
      width 250px
