nav.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#')
        img.img-responsive(src=require('../../assets/images/logo-top.jpg'))
    .navbar-collapse.collapse(uib-collapse='!nav.isCollapsed')
      ul.nav.navbar-nav(ng-if='!showItems')
        li
          a(href='#') Inicio
        li
          a(href='#') Acerca de
        li
          a(href='#') Como Funciona
        li
          a(href='#') Contacto
      ul.nav.navbar-nav(ng-if='showItems')
        li(ui-sref-active="active")
          a(ui-sref='dashboard') Dashboard
        li(ui-sref-active="active", ng-if='currentUser.id_proveedor != 0')
          a(ui-sref='consultaClientes') Consultar Clientes
      ul.nav.navbar-nav.navbar-right
        li(ng-if="showItems")
          a(href="#", ng-click='openChat()')
            i.fa.fa-envelope
        li(ng-if='!showItems')
          a(href='#', ng-click='openRegistro()') Registrate
        li(ng-if='!showItems')
          a(href='#', ng-click='openLogin()') Login
        li.dropdown(uib-dropdown,ng-if='showItems' on-toggle='toggled(open)')
          include ./menuDropdown.jade